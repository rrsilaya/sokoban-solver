/* Colors */
$background = #262E26;
$primary = #90122E;
$secondary = #ECE0A6;
$white = #fff;

.solver
  background-color: rgba(255, 255, 255, 0.05);
  display: flex;
  align-items: center;
  
  .pane {
    height: 80%; width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    
    .directions {
      flex: 1;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
      
      i {
        font-size: 52px;
        color: rgba($white, 0.4);
        transition: 0.3s all ease;

        &.side {
          transform: rotate(-90deg);
        }
        
        &.side:first-of-type {
          margin-right: 1em;
        }
        
        &.active {
          color: $secondary;
        }
      }
      
      .arrow-direction {
        margin-top: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        
        .instruction {
          font-weight: bold;
          letter-spacing: 8px;
          font-size: 13px;
          height: 13px;
          text-transform: uppercase;
          color: $secondary;
          width: 10em;
          text-align: center;
          overflow: hidden;
          
          & > span {
            display: block;
          }
        }
        
        button.arrow {
          background-color: transparent;
          border: none;
          
          i {
            font-size: 24px;
            color: $white;
          }
          
          &[disabled] {
            opacity: 0.3;
          }
        }
      }
    }
    
    .selector {
      display: flex;
      justify-content: space-around;
      width: 90%;
      
      input[type="radio"] { display: none; }
      label {
        display: block;
        cursor: pointer;
        font-weight: bold;
        color: rgba(255, 255, 255, 0.4);
        letter-spacing: 0.3em;
        font-size: 14px;
        transition: 0.3s ease;
        padding: 7px 2em;
        border-bottom: 1px solid transparent;
      }
      
      input[type="radio"]:checked + label {
        color: $secondary;
        transition: 0.3s ease;
        border-bottom: 1px solid $secondary;
      }
    }
    
    .statistics {
      margin-bottom: 0.5em;
      font-size: 14px;
      color: rgba($white, 0.6);
      font-weight: 500;
      
      .highlight {
        color: $secondary;
        font-weight: bold;
      }
    }
  }
  
.directionName-enter {
  transition: 0.5s all;
  opacity: 0;
  
  &.directionName-enter-active {
    opacity: 1;
    transition: 0.5s all;
  }
}

.directionName-leave {
  transition: 0.5s all;
  opacity: 1;
  
  &.directionName-leave-active {
    opacity: 0;
    transition: 0.5s all;
  }
}