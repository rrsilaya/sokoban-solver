/* Colors */
$background = #262E26;
$primary = #90122E;
$secondary = #ECE0A6;
$white = #fff;

$canvasBackground = '../../assets/characters/background.jpg';

.board
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 90% !important;
  
  & > * {    
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .game {
    flex: 1;
    
    .inline {
      position: relative;
      background-image: url($canvasBackground);
      
      .loader {
        background-color: rgba($background, 0.75);
        z-index: 2;
        position: absolute;
        top: 0; bottom: 0;
        left: 0; right: 0;
        display: flex;
        align-items: center;
        justify-content: center;
      }
    }
  }
  
  .tools {
    justify-content: space-between;
    width: 80%;
  }
  
  input[type="file"] {
    display: none;
  }
  
  label[for="file-input"] {
    display: flex;
    align-items: center;
    cursor: pointer;
    
    i {
      margin-right: 0.5em;
    }
    
    span {
      font-size: 12px;
      text-transform: uppercase;
      letter-spacing: 0.2em;
      font-weight: bold;
    }
  }